---
const { title, subtitle, imgSrc, btnLeftText, btnRightText } = Astro.props;
---

<section
  class="landing-section h-screen w-screen text-center overflow-hidden relative"
  data-header-color="black"
>
  <div class="z-30 relative flex flex-col h-full">
    <header class="text-black">
      <h2 class="pt-36 text-[40px] font-medium">{title}</h2>
      <p class="text-sm underline">{subtitle}</p>
    </header>
    <footer class="flex flex-col flex-grow justify-end pb-20">
      <div class="flex gap-x-6 mx-auto">
        <a
          class="text-white text-sm border-[3px] border-gray-800 bg-gray-800 rounded font-medium px-12 py-2 inline-block hover:bg-gray-700 hover:border-gray-700 transition-colors"
          href="#">{btnLeftText}</a
        >
        <a
          class="text-sm border-[3px] border-white bg-white rounded font-medium px-12 py-2 inline-block hover:bg-black hover:text-white hover:border-black transition-colors"
          href="#">{btnRightText}</a
        >
      </div>
    </footer>
  </div>
  <div class="absolute top-0 bottom-0 h-full w-full">
    <img
      src={imgSrc}
      alt={title}
      class="h-full w-full object-cover object-center"
    />
  </div>
</section>
