---
const { title, color, id } = Astro.props;
const textColor = `text-${color}`;
---

<section
  class="landing-section h-screen w-screen text-center overflow-hidden relative"
  data-header-color={color}
  id={id}
>
  <div class="z-30 relative flex flex-col h-full px-6">
    <header class={textColor}>
      <h2 class="pt-36 text-[40px] font-medium">{title}</h2>
      <slot name="subtitle" />
    </header>
    <footer class="flex flex-col flex-grow justify-end pb-20">
      <slot name="footer" />
    </footer>
  </div>
  <div class="absolute top-0 bottom-0 h-full w-full">
    <slot name="background" />
  </div>
</section>
